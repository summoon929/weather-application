<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/location_weather"
    android:background="#FFFFF0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="4"
    android:orientation="vertical"
    tools:context="mg.studio.weatherappdesign.Activity_weather_update">


    <TextView
        android:id="@+id/test_location"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="location"
        android:textAllCaps="true"
        android:textColor="#ADADAD"
        android:textSize="36sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="3"
        android:weightSum="4"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:weightSum="3"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_province"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="province"
                android:textColor="#CDC9C9"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_province"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="2"
                android:gravity="center"
                android:background="@null"
                android:hint="Please type your province here"
                android:textColor="#8C8C8C"
                android:textColorHint="#CDC9C9"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:weightSum="3"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_city"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="city"
                android:textColor="#CDC9C9"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_city"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="2"
                android:gravity="center"
                android:background="@null"
                android:hint="Please type your city here"
                android:textColor="#8C8C8C"
                android:textColorHint="#CDC9C9"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_location_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:background="@drawable/btn_location"
            android:text="ok"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>
